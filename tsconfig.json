{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
  },
  "include": [
    "decorators",
    "services",
    "types",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"],
}
